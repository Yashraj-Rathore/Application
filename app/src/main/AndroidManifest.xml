<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Combined permissions -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- Note: MANAGE_EXTERNAL_STORAGE is a sensitive permission, ensure you comply with Google Play policies -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31"
        android:requestLegacyExternalStorage="true">

    <!-- Main activity from AntiTheft app -->
    <activity
        android:name="com.example.myapplication.MainActivity"
        android:exported="true"
        android:label="@string/app_name">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

    <!-- Firebase messaging service from AntiTheft app -->
    <service
        android:name="com.example.myapplication.MyFirebaseMessagingService"
        android:exported="false">
        <intent-filter>
            <action android:name="com.google.firebase.MESSAGING_EVENT" />
        </intent-filter>
    </service>

    <!-- Additional activities from Cognitive Game -->
    <!-- Since you have two LAUNCHER activities, consider removing the intent-filter from one or changing it -->

        <!-- change paths-->
    <activity android:name="com.example.myapplication.ui.home.ColorSelection"
        android:exported="true" />

    <activity android:name="com.example.myapplication.ui.home.InstructionsActivity"
        android:exported="true" />

    <!-- Assuming you've renamed the MainActivity from CognitiveGame -->
    <activity android:name="com.example.myapplication.ui.home.GameMainActivity"
        android:exported="true" />

</application>
    </manifest>
